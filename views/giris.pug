extends temel 

block content
    -data = data || {}

    if errors 
        ul 
            for error in errors 
                li= error.msg
                //li= arasina bosluk konulmamali! yoksa link fonksiyonu calismayacaktir. Pug kodlamada bosluklar Ã¶nemlidir!
    form(action="/giris" method="POST" class="form-registration")
        label(for="username") Isim:
        input(
            type="text"
            id="username"
            name="username"
            class="form-control"
            value=data.username
        )

        label(for="password") Email:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            value=data.password
        )

        input(type="submit" value="Giris Yap" class="btn btn-lg btn-primary btn-block")
        
        br

        a(href='/') Anasayfa
